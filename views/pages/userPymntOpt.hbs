<script>
    let i=0;
    let placeholder="";
    const txt="Search in Cart....";
    const speed=120;
    function type(){
        placeholder+=txt.charAt(i);
        if(i<txt.length){
            document.querySelector(".search-cont input").setAttribute("placeholder",placeholder)
            i++;
        }else{
             i=0;
             placeholder="";
        }
        setTimeout(type,speed);
    }
    type(); 
</script>